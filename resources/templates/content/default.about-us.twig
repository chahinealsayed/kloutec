				<h1 class="fw-bolder text-primary text-center">{{content.local.title}}</h1>
			</div>
			<div class="box1"></div>
			<div class="box2"></div>
		</div>
		{% contents type='reviews' %}
		<div class="swiper swiper-container" style="height: 250px;margin-top:1rem">
			<div class="swiper-wrapper">
				{% for content in contents %}
					<div class="swiper-slide" style="background:transparent !important;display:flex;align-items:start;">
						<div class="comments-card" data-aos="fade-up" data-aos-duration="500" data-aos-delay="{{t}}">
							<div class="stars d-flex">
								{% set fullStars = content.attrs.stars|round(0, 'floor') %}
								{% set halfStar = content.attrs.stars - fullStars %}
								{% set emptyStars = 5 - fullStars - (halfStar > 0 ? 1 : 0) %}

								{% for i in 1..fullStars %}
									<web-icon class="color-star" path="mdiStar"></web-icon>
								{% endfor %}

								{% if halfStar > 0 %}
									<web-icon class="color-star" path="mdiStarHalf"></web-icon>
								{% endif %}
								{% if emptyStars > 0 %}
									{% for i in 1..emptyStars %}
										<web-icon class="color-star" path="mdiStarOutline"></web-icon>
									{% endfor %}
								{% endif %}
							</div>
							<div class="cards-content">
								<p class="description">
									{{content.local.excerpt}}
								</p>
							</div>
							<div class="person-specialist">
								<div class="rating-container">
									<div class="p-img">
										<img src="{{content.attrs.image.url}}" alt="">
									</div>
									<div class="p-name">
										<p class="name">
											{{content.local.title}}
										</p>
									</div>
								</div>
								<div>
									<p class="specialist">
										{{content.attrs.specialist}}
									</p>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="swiper-pagination" style="top:80% !important"></div>
			<div class="swiper-button-next" style="top:80% !important"></div>
			<div class="swiper-button-prev" style="top:80% !important"></div>
		</div>
		{% endcontents %}
	</section>
	{% endcontent %}
