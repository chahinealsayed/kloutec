{% if isMobile() or isTablet() %}
	{% content "cms.contents.default.reviews" %}
	<section class="section-reviews container">
		<div class="container">
			<div class="text-center simle">
				<span class="text-primary love fw-bold">{{content.local.excerpt}}
					üòç</span>
			</div>
