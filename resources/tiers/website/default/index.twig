<script>
	function toggleData(circleNumber) {
var dataElements = document.querySelectorAll('.data');
for (var i = 0; i < dataElements.length; i++) {
dataElements[i].classList.remove('active');
}

var dataElement = document.getElementById('data' + circleNumber);
if (dataElement) {
dataElement.classList.add('active');
}

var circles = document.querySelectorAll('.circle');
for (var i = 0; i < circles.length; i++) {
circles[i].classList.remove('active');
}

var circle = document.querySelector('.circle:nth-child(' + circleNumber + ')');
if (circle) {
circle.classList.add('active');
}
}
toggleData(1);
</script>
